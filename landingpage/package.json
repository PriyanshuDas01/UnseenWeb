{
  "name": "purescript-landing-page",
  "version": "1.0.0",
  "description": "A minimal landing page built with PureScript and Halogen",
  "type": "module",
  "scripts": {
    "build": "spago build && esbuild index.js --bundle --outfile=dist/bundle.js --format=esm",
    "start": "serve .",
    "clean": "rm -rf output dist"
  },
  "devDependencies": {
    "esbuild": "^0.19.0",
    "purescript": "^0.15.0",
    "spago": "^0.20.0",
    "serve": "^14.0.0"
  }
} 